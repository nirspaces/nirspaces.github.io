
<div class="container">				
  <div class="title page-title text-center">
    <h1 class="dark-text"><%= data.about.title %></h1>
    <span class="underline green"></span>
  </div>					
</div>

<div class="container text-center pad-bot about-description">				
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animated-scale-up">
    <%= data.about.about_us %>
  </div>
</div>

<div class="container pad-bot highlighted">	
  <% for highlight_id in data.about.highlights.keys %>
  <%
     part_1 = data.about.highlights[highlight_id].part_1
     part_2 = data.about.highlights[highlight_id].part_2
  %>
  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 highlights">
    <div class="about-overlay-under text-center"><div class="about-overlay-above"><i class="icon-ok"></i></div></div>
    <h6><span class="highlights-first"><%= part_1 %></span><span><%= part_2 %></span></h6>
  </div>	
  <% end %>
</div>
